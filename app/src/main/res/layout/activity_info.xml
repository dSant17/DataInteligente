<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEncuestador"
            android:text="ENCUESTADOR:"
            android:textSize="18sp"
            android:fontFamily="@font/montsli">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtProyecto"
            android:text="PROYECTO:"
            android:textSize="18sp"
            android:fontFamily="@font/montsli">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescripcion"
            android:text="DESCRIPCIÓN:"
            android:textSize="18sp"
            android:fontFamily="@font/montsli">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFecha"
            android:text="FECHA DE CREACIÓN:"
            android:textSize="18sp"
            android:fontFamily="@font/montsli">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/lstPreguntas">
            </androidx.recyclerview.widget.RecyclerView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnRegresar"
                        android:layout_marginRight="25dp"
                        android:text="REGRESAR"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#104D7F"
                        android:fontFamily="@font/montsli">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnAplicar"
                        android:text="APLICAR"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#104D7F"
                        android:fontFamily="@font/montsli">
                    </Button>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>